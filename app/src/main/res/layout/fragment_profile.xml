<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/toolbarRl"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/toolbar_bg02">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profileIv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="15dp"
                android:background="?attr/colorOnPrimary"
                android:scaleType="centerCrop"
                android:src="@drawable/person_black"
                app:shapeAppearanceOverlay="@style/ImageStyle_Circle" />

            <!--TextView: Show full name of logged-in user-->
            <TextView
                android:id="@+id/fullNameTv"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profileIv"
                android:layout_centerHorizontal="true"
                android:textColor="?attr/colorOnPrimary"
                tools:text="@tools:sample/full_names" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <!--TextView: User Email Label-->
            <TextView
                android:id="@+id/emailLabelTv"
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Email" />

            <TextView
                android:id="@+id/emailTv"
                style="@style/TextAppearance.Material3.BodySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                tools:text="sample@technifysoft.com" />

            <!--TextView: User Phone Label-->
            <TextView
                android:id="@+id/phoneLabelTv"
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/emailLabelTv"
                android:layout_marginTop="10dp"
                android:text="Phone" />

            <!--TextView: Show User Phone-->

            <TextView
                android:id="@+id/phoneTv"
                style="@style/TextAppearance.Material3.BodySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/emailLabelTv"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                tools:text="@tools:sample/us_phones" />

            <!--TextView: User DOB Label-->
            <TextView
                android:id="@+id/dobLabelTv"
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phoneLabelTv"
                android:layout_marginTop="10dp"
                android:text="Dob" />

            <!--TextView: Show User DOB-->
            <TextView
                android:id="@+id/dobTv"
                style="@style/TextAppearance.Material3.BodySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phoneLabelTv"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                tools:text="01/01/2000" />

            <!--TextView: Member Since Label-->
            <TextView
                android:id="@+id/memberSinceLabelTv"
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dobLabelTv"
                android:layout_marginTop="10dp"
                android:text="Member Since" />

            <!--TextView: Show Member Since-->
            <TextView
                android:id="@+id/memberSinceTv"
                style="@style/TextAppearance.Material3.BodySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dobLabelTv"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                tools:text="01/01/2000" />

            <!--TextView: User Account Verification Status Label-->
            <TextView
                android:id="@+id/verificationLabelTv"
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/memberSinceLabelTv"
                android:layout_marginTop="10dp"
                android:text="Account Status" />

            <!--TextView: Show User Account Verification Status-->
            <TextView
                android:id="@+id/verificationTv"
                style="@style/TextAppearance.Material3.BodySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/memberSinceLabelTv"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                tools:text="Not Verified" />

            <!--TextView: Preferences Label-->
            <TextView
                android:id="@+id/preferencesTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/verificationLabelTv"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="Preferences" />

            <!--MaterialCardView: Click to Add/Post Property-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/postPropertyAdCv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/preferencesTv"
                android:layout_margin="2dp"
                app:cardCornerRadius="10dp"
                app:contentPadding="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--ImageView: Post Ad Icon-->
                    <ImageView
                        android:id="@+id/postAdIconIv"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:adjustViewBounds="true" />

                    <!--TextView: Post Ad Title-->
                    <TextView
                        android:id="@+id/postAdTitleTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/postAdIconIv"
                        android:gravity="center_vertical"
                        android:text="Looking to sell or rent out your property?" />

                    <!--MaterialButton: Post Ad Button, Click to open the activity to add a pro-->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/postAdBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/postAdTitleTv"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/postAdIconIv"
                        android:text="Post an Ad" />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!--MaterialCardView: Click to logout-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/logoutCv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/postPropertyAdCv"
                android:layout_margin="2dp"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/next_gray"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/logout_gray"
                    android:gravity="center_vertical"
                    android:text="Logout" />

            </com.google.android.material.card.MaterialCardView>

            <!--MaterialCardView: Click to Edit Profile-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/editProfileCv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logoutCv"
                android:layout_margin="2dp"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/next_gray"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/person_gray"
                    android:gravity="center_vertical"
                    android:text="Edit Profile" />

            </com.google.android.material.card.MaterialCardView>

            <!--MaterialCardView: Click to Change Pass-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/changePassCv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editProfileCv"
                android:layout_margin="2dp"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/next_gray"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/lock_gray"
                    android:gravity="center_vertical"
                    android:text="Change Password" />
            </com.google.android.material.card.MaterialCardView>

            <!--MaterialCardView: Click to Verifi Acc-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/verifyAccountCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/changePassCv"
                android:layout_margin="2dp"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/next_gray"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/verifi_gray"
                    android:gravity="center_vertical"
                    android:text="Change Password" />
            </com.google.android.material.card.MaterialCardView>

            <!--MaterialCardView: Click to Delete Account-->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/deleteAccCv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/verifyAccountCV"
                android:layout_margin="2dp"
                app:cardCornerRadius="10dp"
                app:contentPadding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/next_gray"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/block_gray"
                    android:gravity="center_vertical"
                    android:text="Delete Account" />
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>